{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "../dist-app",
    "rootDir": ".",
    "declaration": false,
    "types": ["node"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
